/* CONSTANTS */
BACKGROUND_COLOR = #FFFFFF
BACKGROUND_TEXT = #000000 //for text ON the background
ACCENT_COLOR = #E84B03
ACCENT_TEXT = BACKGROUND_COLOR //for text on the accent
SHADOW = #CCCCCC
SPACER = SHADOW
HOVER = #888888

OTHER_COLOR = ACCENT_COLOR
OTHER_TEXT = ACCENT_TEXT
SELF_COLOR = #F6F6F6
SELF_TEXT = BACKGROUND_TEXT
ADMIN_COLOR = #4B03E8
ADMIN_TEXT = ACCENT_TEXT

//You know... * and body
*
  -webkit-tap-highlight-color rgba(0,0,0,0)
  padding 0
  margin 0

body
  -webkit-touch-callout none
  -webkit-text-size-adjust none
  -webkit-user-select none
  background-color BACKGROUND_COLOR
  color BACKGROUND_TEXT
  font-family 'Open Sans', Verdana, sans-serif

//general stylings
a
  text-decoration none
  &:hover
    color HOVER

.normal
  background-color BACKGROUND_COLOR
  color BACKGROUND_TEXT
  
  a
    color BACKGROUND_TEXT
    &:hover
      color HOVER
  
.accent
  background-color ACCENT_COLOR
  color ACCENT_TEXT
  
  a
    color ACCENT_TEXT
    &:hover
      color #DDDDDD

//components
.dialog
  display none

.left
.right
.center
  display inline-block
  vertical-align middle
  padding-left 10px
  padding-right 10px
  text-align center

.right
  text-align right
.left
  text-align left
  
.page
  float left
  min-width 20ex
  h3
    margin-top 10px
  
  .header
    border-bottom-style solid
    border-bottom-width 1px
    border-bottom-color SHADOW
    padding 5px 0
  
  input
  select
    margin 0 3px
    padding 10px
    background-color #FFFFFF
    font-weight bold
    border-style solid
    border-color SHADOW
    border-width 2px
    &:hover
      border-color HOVER
    &:focus
      border-color #CC3333
    
  .footer
    border-top-style solid
    border-top-width 1px
    border-top-color SHADOW
    padding 3px
    select
      padding 9px 1px
  
  .content
    margin 2px 10px
    overflow-y scroll
      
    ul
      list-style none
      &.rooms
        margin-bottom 40px
        border-bottom-style solid
        border-bottom-width 1px
        border-bottom-color SPACER
        
        
        li
          display block
          vertical-align middle
          margin 2px 0
          height BLOCK_HEIGHT = 60px
          border-top-style solid
          border-top-width 1px
          border-top-color SPACER
          line-height BLOCK_HEIGHT
      
      &.messages
        li
          border-style solid
          border-width 1px
          border-color SPACER
          margin 7px
          padding 5px
          border-radius 2px
          .time
            font-weight bold
            
          &.other
            background-color OTHER_COLOR
            color OTHER_TEXT
            margin-right 40px
            .time
              text-align right
            
          &.self
            background-color SELF_COLOR
            color SELF_TEXT
            margin-left 40px
            .message
              text-align right
          
          &.admin
            background-color ADMIN_COLOR
            color ADMIN_TEXT
            margin-right 40px
            .message:before
              font-weight bold
              content 'ADMIN'
              text-align center
              display block
            .time
              text-align right
      
      &.options
        margin-top 10px

//scrollbar
::-webkit-scrollbar
  width 12px

::-webkit-scrollbar-track
  background-color rgba(0, 0, 0, 0.2)
  border-radius: 10px

::-webkit-scrollbar-thumb
  border-radius 10px
  background-color rgba(0, 0, 0, 0.3)
  
/* ANIMATIONS */
@keyframes fade
  from { opacity: 1.0 }
  50% { opacity: 0.4 }
  to { opacity: 1.0 }
 
@-webkit-keyframes fade
  from { opacity: 1.0 }
  50% { opacity: 0.4 }
  to { opacity: 1.0 }
 
.blink
  animation:fade 3000ms infinite;
  -webkit-animation:fade 3000ms infinite;